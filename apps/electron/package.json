{
  "name": "zonewise-desktop",
  "version": "1.0.0",
  "description": "ZoneWise Desktop - AI-Powered Zoning Intelligence Platform",
  "productName": "ZoneWise",
  "main": "dist/main.cjs",
  "private": true,
  "author": {
    "name": "Everest Capital USA",
    "email": "ariel@everestcapitalusa.com"
  },
  "homepage": "https://zonewise.app",
  "license": "Apache-2.0",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build:main": "esbuild src/main/index.ts --bundle --platform=node --format=cjs --outfile=dist/main.cjs --external:electron",
    "build:main:win": "esbuild src/main/index.ts --bundle --platform=node --format=cjs --outfile=dist/main.cjs --external:electron",
    "build:preload": "esbuild src/preload/index.ts --bundle --platform=node --format=cjs --outfile=dist/preload.cjs --external:electron",
    "build:renderer": "vite build",
    "build:resources": "cp -r resources dist/",
    "build:resources:win": "powershell -Command \"Copy-Item -Path resources -Destination dist\\resources -Recurse -Force\"",
    "build:assets": "mkdir -p dist/assets && cp -r ../../packages/shared/assets/docs dist/assets/",
    "build:assets:win": "powershell -Command \"New-Item -ItemType Directory -Path dist\\assets -Force; Copy-Item -Path ..\\..\\packages\\shared\\assets\\docs -Destination dist\\assets\\docs -Recurse -Force\"",
    "build": "bun run build:main && bun run build:preload && bun run build:renderer && bun run build:resources && bun run build:assets",
    "build:win": "bun run build:main:win && bun run build:preload && bun run build:renderer && bun run build:resources:win && bun run build:assets:win",
    "start": "bun run build && electron .",
    "start:win": "bun run build:win && electron .",
    "dev": "vite dev",
    "typecheck": "tsc --noEmit",
    "dist:mac": "bash scripts/build-dmg.sh arm64",
    "dist:mac:x64": "bash scripts/build-dmg.sh x64",
    "dist:win": "powershell -ExecutionPolicy Bypass -File scripts/build-win.ps1",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@craft-agent/core": "workspace:*",
    "@craft-agent/shared": "workspace:*",
    "@craft-agent/ui": "workspace:*",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@paper-design/shaders-react": "^0.0.69",
    "@pierre/diffs": "^1.0.4",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-switch": "^1.2.6",
    "@tanstack/react-table": "^8.21.3",
    "chrono-node": "^2.9.0",
    "cmdk": "^1.1.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "jotai-family": "^1.0.1",
    "mapbox-gl": "^3.3.0",
    "motion": "^12.23.26",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-day-picker": "^9.13.0",
    "react-dom": "^18.3.1",
    "react-map-gl": "^7.1.7",
    "react-simple-code-editor": "^0.14.1",
    "remark": "^15.0.1",
    "sonner": "^2.0.7",
    "strip-markdown": "^6.0.0",
    "unist-util-visit": "^5.0.0",
    "vaul": "^1.1.2"
  }
}
