{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "bun install && bun run viewer:build && node zonewise/branding/inject-branding.mjs",
  "outputDirectory": "apps/viewer/dist",
  "installCommand": "bun install",
  "framework": "vite",
  "rewrites": [
    { "source": "/s/(.*)", "destination": "/s/$1" },
    { "source": "/((?!s/|api/).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/s/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
